<Page x:Class="TaskManage.AddTaskPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:TaskManage"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="900"
      Title="AddTaskPage">

    <Grid>
        <TextBox x:Name="taskBox" Padding="5" HorizontalAlignment="Left" Height="36.5" Margin="63.75,100.75,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="248.25" FontSize="18.667" UndoLimit="103"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="63.75,45.25,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="21.333" Width="348.75"><Run Text="请输入需要启动的"/><Run Text="程序名称"/></TextBlock>
        <Button x:Name="button" Content="确认启动" Click="button_Click" Margin="63.75,165.25,0,0" VerticalAlignment="Top" Height="44.75" FontSize="18.667" Background="#FF0288D1" BorderThickness="0" Foreground="White" HorizontalAlignment="Left" Width="248.25"/>
        <TextBlock x:Name="resultBlock" HorizontalAlignment="Left" Margin="63.75,254.25,0,0" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="18.667" Foreground="#FFDB2020"/>

    </Grid>
</Page>
